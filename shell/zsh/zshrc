#
# Executes commands at the start of an interactive session.
#

# Source profile.
[[ -e ~/dotfiles/shell/profile ]] && source ~/dotfiles/shell/profile

# Source Antidote (replaces Prezto).
source ~/.antidote/antidote.zsh
antidote load ${ZDOTDIR:-~}/.zsh_plugins.txt

# Configure zsh-autosuggestions for better performance
export ZSH_AUTOSUGGEST_USE_ASYNC=1

# Initialize zoxide (smarter cd)
eval "$(zoxide init zsh)"

setopt HIST_IGNORE_SPACE
export HISTSIZE=100000
export SAVEHIST=100000
mkdir -p "$XDG_STATE_HOME/zsh"
export HISTFILE="$XDG_STATE_HOME/zsh/history"
[[ -z "$TMPDIR" ]] && TMPDIR=/tmp

# Setup homebrew
eval $(/opt/homebrew/bin/brew shellenv)

# Setup Claude Code
alias claude="~/.claude/local/claude"

# Source 'fzf'.
[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh

# GCP path.
source "$(brew --prefix)/share/google-cloud-sdk/path.zsh.inc"
source "$(brew --prefix)/share/google-cloud-sdk/completion.zsh.inc"

# Since it's provided by our prompt.
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Configure opam
test -r /Users/mattwestcott/.opam/opam-init/init.zsh && . /Users/mattwestcott/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# Init pyenv
eval "$(pyenv init -)"

# Initalize rbenv.
command -v rbenv > /dev/null 2>&1 && eval "$(rbenv init -)"

# Initialize Starship prompt (replaces Spaceship)
eval "$(starship init zsh)"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/usr/local/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/usr/local/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/usr/local/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/usr/local/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
