{
  "env": {
    "MAX_THINKING_TOKENS": "8192"
  },
  "trustedDirectories": [
    "~/repos"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if [ -n \"$file_path\" ]; then ~/.claude/hooks/format.sh \"$file_path\"; fi; }"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 1.0 /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 2.0 /System/Library/Sounds/Bottle.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/dotfiles/bin/cc-statusline"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  }
}
