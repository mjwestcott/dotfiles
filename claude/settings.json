{
  "model": "opus",
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(**/*.pem)",
      "Read(**/*id_rsa*)",
      "Read(**/*id_ed25519*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Edit(.env)",
      "Edit(**/*secret*)",
      "Edit(**/*credential*)",
      "Write(.env)",
      "Write(**/*secret*)",
      "Write(**/*credential*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-start.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-bash.sh",
            "timeout": 2000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if [ -n \"$file_path\" ] && [ -x ~/.claude/hooks/post-edit.sh ]; then ~/.claude/hooks/post-edit.sh \"$file_path\"; fi; }"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$(uname)\" = Darwin ] && afplay -v 1.0 /System/Library/Sounds/Glass.aiff || printf '\\a'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$(uname)\" = Darwin ] && afplay -v 2.0 /System/Library/Sounds/Bottle.aiff || printf '\\a'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/dotfiles/bin/cc-statusline"
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true
  }
}
